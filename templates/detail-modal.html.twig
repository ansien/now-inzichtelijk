<div class="modal-header">
    <h5 class="modal-title">{{ company.companyName }}</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <table class="table">
        <thead>
        <tr style="border-top: none;">
            <th scope="col" style="border-top: none;">Versie</th>
            <th scope="col" style="border-top: none;">Voorschot ontvangen</th>
            <th scope="col" style="border-top: none;">Vastgesteld bedrag</th>
        </tr>
        </thead>
        <tbody>
        {% for entry in entries %}
            <tr>
                <th scope="row">{{ 'NOW ' ~ entry.batch }}</th>
                <td>{{ entry.depositedAmount|format_currency('EUR', { fraction_digit: 0 }) }}</td>
                <td class="{{ entry.updatedAmount is null ? '' : (entry.updatedAmount >= entry.depositedAmount) ? 'text-success' : 'text-danger' }}">{{ entry.updatedAmount is not null ? entry.updatedAmount|format_currency('EUR', { fraction_digit: 0 }) : 'Nog niet bekend' }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Sluiten</button>
</div>

